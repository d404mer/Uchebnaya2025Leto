<Window x:Class="UCHEBKA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UCHEBKA"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель фильтров -->
        <StackPanel
            x:Name="AuthBtn"
            Grid.Row="0" Orientation="Horizontal" Margin="10">
            <ComboBox x:Name="MyComboBox" Width="200" Margin="0,0,10,0" />
            <Button Content="Выбрать дату" Margin="0,0,10,0" />
            <Button Content="Применить" Margin="0,0,10,0"/>
            <Button Content="Авторизация"  Margin="0,0,10,0" Click="Button_Click" />
        </StackPanel>

        <!-- Календарь (скрыт по умолчанию) -->
        <Calendar x:Name="MyCalendar" Grid.Row="1" Visibility="Collapsed"
                 />

        <!-- Список карточек -->
        <ScrollViewer Grid.Row="1">
            <WrapPanel x:Name="EventsWrapPanel" Margin="10"/>
        </ScrollViewer>
    </Grid>
</Window>
